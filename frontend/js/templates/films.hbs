{{#if isAdmin}}
    <a href="#home/filmeditor" class="btn btn-primary pull-right">
        <i class="fa fa-plus"></i> Crear Entrada
    </a>
{{/if}}
<h1>Películas</h1>
{{#each film}}
    <div class="media">
        {{#if ../isAdmin}}
            <div class="btn-toolbar">
            <a href="#home/filmeditor/{{_id}}" class="pull-right">
                <i class="fa fa-pencil"></i>
            </a>
            <a href="#home/deleteeditor/{{_id}}" class="pull-right">
                <i class="fa fa-remove"></i>
            </a>
            </div>
        {{/if}}
        <div class="media-body">
            <a href="#home/film/{{_id}}">
                <h2 class="media-heading title-center espacio-bajo-5">{{title}}</h4>
            </a>
            <div>
                <a href="#home/film/{{_id}}">
                    <img src="{{poster}}" alt="" class="img-responsive center-block">
                </a>
            </div>

            <script type="text/javascript">
                $(function() {
                var texto = $.parseHTML({{content}});
                var numMaxCaract = 20;

                if (texto.length <  numMaxCaract){
                    var textoCortado = texto;
                }else{
                    textoCortado = texto.substr(0, numMaxCaract);
                    var numUltimoEspacio = textoCortado.lastIndexOf(" ");
                    var ultimoEspacio = textoCortado.substr(0, numUltimoEspacio);
             
                    if (ultimoEspacio !== false){
                        var textoCortadoTmp = textoCortado.substr(0, numUltimoEspacio);
                        if (textoCortado.substr(ultimoEspacio)){
                            textoCortadoTmp += '...';
                        }
                        textoCortado = textoCortadoTmp;
                    }else if (texto.substr(numMaxCaract)){
                        textoCortado += '...';
                    }
                }
                var x = document.getElementsByClassName("woma2");
                var i;
                for (i = 0; i < x.length; i++) {
                    x[i].innerHTML = textoCortado;
                }
                });
            </script>
            <p class="woma2"></p>
            <br /><br /><br />
            <p class="details-film">Fecha publicación: {{date}} &nbsp;&nbsp; - &nbsp;&nbsp; Dirigido por: {{manager}}</p>
        </div>
    </div>
    <hr />
{{/each}}